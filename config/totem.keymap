            //                                     ┃           ┃    TAB    ┃    SPC    ┃   ┃    DEL    ┃     0     ┃           ┃
            //                                     ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛   ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛

            bindings = <
              &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3   &kp NUMBER_4    &kp N5    &kp NUMBER_6  &kp N7     &kp NUMBER_8  &kp NUMBER_9  &kp N0
              &kp LSHFT     &kp LS(F6)    &kp LS(LC(L))  &none           &trans    &kp LEFT      &kp DOWN   &kp UP_ARROW  &kp RIGHT     &trans
&kt LEFT_ALT  &kp DEL       &kp PG_UP     &kp C_AC_COPY  &kp C_AC_PASTE  &none     &kp HOME      &none      &none         &kp END       &trans  &kp DELETE
                                          &trans         &trans          &trans    &mo 3         &kp KP_N0  &trans
            >;
        };

        // ▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄

        sim_layer {
            // ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓

